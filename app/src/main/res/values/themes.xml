<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Konspektor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/blue</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="enterAnim">@anim/nav_default_enter_anim</item>
        <item name="exitAnim">@anim/nav_default_exit_anim</item>
        <item name="popEnterAnim">@anim/nav_default_pop_enter_anim</item>
        <item name="popExitAnim">@anim/nav_default_pop_exit_anim</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_style</item>
    </style>
    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>
</resources>